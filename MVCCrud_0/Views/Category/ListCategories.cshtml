@model CategoryVM

@{
    ViewBag.Title = "ListCategories";
}



<div class="jumbotron">
    Kategori Listesi, yeni kategori eklemek icin @Html.ActionLink("tıklayınız", "AddCategory")
</div>
<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kategori ID</th>
                    <th> Kategori Ismi</th>
                    <th>Aciklaması</th>
                    <th colspan="2" style="text-align:center;padding-left:20px" >Islemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category item in Model.Categories)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>

                        <td>
                            @Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.CategoryID }, new { @class = "btn btn-warning" })
                        </td>

                        <td>

                            @Html.ActionLink("Sil", "DeleteCategory", new { id = item.CategoryID }, new { @class = "btn btn-danger" })

                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
