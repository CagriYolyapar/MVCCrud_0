
@model ProductVM

@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm())
{

    @Html.HiddenFor(x=>x.Product.ProductID)

    <div>
        @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control" })
    </div>
    <br />

    <div>
        @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control" })
    </div>

    <br />

    <div>
        @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "CategoryID", "CategoryName"), "Lutfen seciniz", new { @class = "form-control" })


    </div>
    <br />
    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>


}

